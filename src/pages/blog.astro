---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "Mi blog de Astro aprendizaje";

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---
<!doctype html>
<html lang="en">
	<head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width" />
        <title>{pageTitle}</title>
        <style define:vars={{skillColor, fontWeight, textCase}}>
				.skill {
					color: var(--skillColor);
					font-weight: var(--fontWeight);
					text-transform: var(--textCase);
				}
			</style>
    </head>
    <body>
	
		<a><Header /></a>
		<h1>{pageTitle}</h1>
       
        <p>Aquí es donde publicaré sobre mi viaje de aprendizaje Astro.</p>
        <ul>
            <li class="skill"><a href="/posts/post-1/">Publicación 1</a></li>
            <li class="skill"><a href="/posts/post-2/">Publicación 2</a></li>
            <li class="skill"><a href="/posts/post-3/">Publicación 3</a></li>
        </ul>
        <Footer />
        <script>
            import "../scripts/menu.js";
        </script>
	</body>
</html>
